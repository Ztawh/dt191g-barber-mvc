@model barber_mvc.Models.Appointment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAndTime)
        </dt>
        <dd class = "col-sm-10">
            @* @Html.DisplayFor(model => model.DateAndTime) *@
            @ViewData["date"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Barber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Barber.BarberName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
