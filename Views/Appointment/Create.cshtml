@model barber_mvc.Models.Appointment

@{
    ViewData["Title"] = "Ny bokning";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="center">Ny bokning</h2>
<div>
    <div>
        <form asp-action="Create" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="DateAndTime" class="control-label"></label>
                <input asp-for="DateAndTime" class="form-control" />
                <span asp-validation-for="DateAndTime" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="BarberId" class="control-label"></label>
                <select asp-for="BarberId" class ="form-control" asp-items="ViewBag.BarberId"></select>
            </div>
            <div>
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div>
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div>
                <input type="submit" value="Skapa" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka</a>
</div>

