@model barber_mvc.Models.Appointment

@{
    ViewData["Title"] = "Redigera bokning";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="center">Redigera bokning</h2>
<div>
    <div>
        <form class="edit-form" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" />
            <div>
                <label asp-for="DateAndTime" class="control-label"></label>
                <input asp-for="DateAndTime" class="form-control" />
                <span asp-validation-for="DateAndTime" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="BarberId" class="control-label"></label>
                <select asp-for="BarberId" class="form-control" asp-items="ViewBag.BarberId"></select>
                <span asp-validation-for="BarberId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Spara" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka</a>
</div>

